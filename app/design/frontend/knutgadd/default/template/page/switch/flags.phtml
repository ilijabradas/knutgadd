     $storeCode = Mage::app()->getStore()->getCode();
     if($storeCode <> 'se'):
?>
    <div class="language">
        <div class="form-language">
            <div class="langs-wrapper">
                <?php foreach ($this->getStores() as $_lang): ?>
                    <?php if ($_lang->getCode() != 'default') { ?>
                        <a class="lang-flag" href="<?php echo '/' . $_lang->getCode();?>"><img src="<?php echo $this->getSkinUrl('images/new-flags/' . $_lang->getCode() . '.png');?>" alt=""></a>
                    <?php } else if ($_lang->getCode() == 'default') { ?>
                        <a class="lang-flag" href="/"><img src="<?php echo $this->getSkinUrl('images/new-flags/us.png');?>" alt=""></a>
                    <?php } ?>
                <?php endforeach;?>
            </div>
        </div>
    </div>

<?php endif; ?>